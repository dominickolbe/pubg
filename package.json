{
  "name": "pubg",
  "version": "1.9.0",
  "author": "Dominic Kolbe <kolbedominic@gmail.com>",
  "repository": "git@github.com:dominickolbe/pubg.git",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": [
    "packages/pubg-frontend",
    "packages/pubg-model",
    "packages/pubg-server",
    "packages/pubg-utils"
  ],
  "scripts": {
    "frontend:start": "yarn workspace pubg-frontend start",
    "frontend:build": "yarn workspace pubg-frontend build",
    "server:start:dev": "yarn workspace pubg-server start:dev",
    "server:start": "NODE_ENV=production yarn workspace pubg-server ts-node --transpile-only src/index.ts",
    "prettier:check": "prettier --check packages/**/*",
    "prettier:fix": "prettier --write packages/**/*"
  },
  "dependencies": {
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "engines": {
    "node": "14",
    "yarn": "1.22"
  }
}
